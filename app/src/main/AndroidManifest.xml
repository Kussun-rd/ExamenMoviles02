<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LaboratorioCalificado02"
        tools:targetApi="31">

        <!-- MainActivity como actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Ejercicio01 (tu actividad anterior) -->
        <activity
            android:name=".Ejercicio01"
            android:exported="true"
            android:theme="@style/Theme.LaboratorioCalificado02" />

        <!-- RegisterActivity (pantalla de registro de pedidos) -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.LaboratorioCalificado02" />

        <!-- PedidoActivity (pantalla de pedidos) -->
        <activity
            android:name=".PedidoActivity"
            android:exported="true"
            android:theme="@style/Theme.LaboratorioCalificado02" />

    </application>

</manifest>


